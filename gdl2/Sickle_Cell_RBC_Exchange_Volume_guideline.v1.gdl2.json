      "gt0017": {
        "id": "gt0017",
        "model_id": "openEHR-EHR-OBSERVATION.sickle_cell_rbc_exchange_volume.v0",
        "template_id": "openEHR-EHR-OBSERVATION.sickle_cell_rbc_exchange_volume.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0024": {
            "id": "gt0024",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0012]"
          },
          "gt0036": {
            "id": "gt0036",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0016]"
          }
        }
      },
      "gt0030": {
        "id": "gt0030",
        "model_id": "openEHR-EHR-OBSERVATION.blood_volume_calculation.v0",
        "template_id": "openEHR-EHR-OBSERVATION.blood_volume_calculation.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0031": {
            "id": "gt0031",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0013]"
          },
          "gt0034": {
            "id": "gt0034",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0014]"
          }
        }
      }
    },
    "default_actions": [
      "$gt0039|Height conversion factor|=1",
      "$gt0041|Weight conversion factor|=1"
    ],
    "rules": {
      "gt0038": {
        "id": "gt0038",
        "priority": 7,
        "when": [
          "$gt0005|Patient height|.unit=='in'"
        ],
        "then": [
          "$gt0039|Height conversion factor|=2.54"
        ]
      },
      "gt0040": {
        "id": "gt0040",
        "priority": 6,
        "when": [
          "$gt0007|Patient weight|.unit=='lb'"
        ],
        "then": [
          "$gt0041|Weight conversion factor|=0.45359237"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 5,
        "when": [
          "$gt0003|Patient sex|==local::at0005|Male|",
          "$gt0005|Patient height|!=null",
          "$gt0007|Patient weight|!=null"
        ],
        "then": [
          "$gt0031|Total blood volume|.magnitude=0.3669*($gt0005.magnitude*$gt0039/100)^3+0.03219*($gt0007.magnitude*$gt0041)+0.6041",
          "$gt0031|Total blood volume|.precision=3",
          "$gt0031|Total blood volume|.unit='l'"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 4,
        "when": [
          "$gt0003|Patient sex|==local::at0006|Female|",
          "$gt0005|Patient height|!=null",
          "$gt0007|Patient weight|!=null"
        ],
        "then": [
          "$gt0031|Total blood volume|.magnitude=0.3561*($gt0005.magnitude*$gt0039/100)^3+0.03308*($gt0007.magnitude*$gt0041)+0.1833",
          "$gt0031|Total blood volume|.precision=3",
          "$gt0031|Total blood volume|.unit='l'"
        ]
      },
      "gt0033": {
        "id": "gt0033",
        "priority": 3,
        "when": [
          "$gt0031|Total blood volume|!=null",
          "$gt0026|Patient hematocrit|!=null"
        ],
        "then": [
          "$gt0034|RBC volume|.magnitude=($gt0031.magnitude*1000)*$gt0026.magnitude/100",
          "$gt0034|RBC volume|.unit='ml'"
        ]
      },
      "gt0035": {
        "id": "gt0035",
        "priority": 2,
        "when": [
          "$gt0034|RBC volume|!=null",
          "$gt0027|Patient's initial HgbS|!=null",
          "$gt0028|Goal HgbS|!=null",
          "$gt0029|Hematocrit of transfused RBCs|!=null"
        ],
        "then": [
          "$gt0024|RBC replacement volume|.magnitude=($gt0034.magnitude*log($gt0027.magnitude/$gt0028.magnitude)/$gt0029.magnitude)*100",
          "$gt0024|RBC replacement volume|.unit='ml'",
          "$gt0024|RBC replacement volume|.precision=2"
        ]
      },
      "gt0037": {
        "id": "gt0037",
        "priority": 1,
        "when": [
          "$gt0024|RBC replacement volume|!=null"
        ],
        "then": [
          "$gt0036|Approximate number of units, assuming 350 mL RBCs per unit|.magnitude=$gt0024.magnitude/350",
          "$gt0036|Approximate number of units, assuming 350 mL RBCs per unit|.unit='1'"
        ]
      }
    }
  },
