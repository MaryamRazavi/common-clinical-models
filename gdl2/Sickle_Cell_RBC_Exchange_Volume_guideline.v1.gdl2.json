    "rules": {
      "gt0038": {
        "id": "gt0038",
        "priority": 18,
        "when": [
          "$gt0005|Patient height|<=12,cm"
        ],
        "then": [
          "$gt0018|Warning Patient height|='Very low double-check.'"
        ]
      },
      "gt0039": {
        "id": "gt0039",
        "priority": 17,
        "when": [
          "$gt0005|Patient height|>203,cm",
          "$gt0005|Patient height|<229,cm"
        ],
        "then": [
          "$gt0018|Warning Patient height|='Very high double-check.'"
        ]
      },
      "gt0040": {
        "id": "gt0040",
        "priority": 16,
        "when": [
          "$gt0005|Patient height|>=229,cm"
        ],
        "then": [
          "$gt0018|Warning Patient height|='Too high please change to proceed.'"
        ]
      },
      "gt0041": {
        "id": "gt0041",
        "priority": 15,
        "when": [
          "$gt0026|Patient hematocrit|<10,%"
        ],
        "then": [
          "$gt0019|Warning Patient hematocrit|='Very low double-check.'"
        ]
      },
      "gt0042": {
        "id": "gt0042",
        "priority": 14,
        "when": [
          "$gt0026|Patient hematocrit|>40,%",
          "$gt0026|Patient hematocrit|<101,%"
        ],
        "then": [
          "$gt0019|Warning Patient hematocrit|='Very high double-check.'"
        ]
      },
      "gt0043": {
        "id": "gt0043",
        "priority": 13,
        "when": [
          "$gt0026|Patient hematocrit|>=101,%"
        ],
        "then": [
          "$gt0019|Warning Patient hematocrit|='Too high please change to proceed.'"
        ]
      },
      "gt0044": {
        "id": "gt0044",
        "priority": 12,
        "when": [
          "$gt0027|Patient's initial HgbS|<20,%"
        ],
        "then": [
          "$gt0021|Warning Goal HgbS|='Very low double-check.'"
        ]
      },
      "gt0045": {
        "id": "gt0045",
        "priority": 11,
        "when": [
          "$gt0027|Patient's initial HgbS|>100,%"
        ],
        "then": [
          "$gt0020|Warning Patient's initial HgbS|='Too high please change to proceed.'"
        ]
      },
      "gt0046": {
        "id": "gt0046",
        "priority": 10,
        "when": [
          "$gt0028|Goal HgbS|<1,%"
        ],
        "then": [
          "$gt0021|Warning Goal HgbS|='Too low please change to proceed.'"
        ]
      },
      "gt0047": {
        "id": "gt0047",
        "priority": 9,
        "when": [
          "$gt0028|Goal HgbS|>30,%"
        ],
        "then": [
          "$gt0021|Warning Goal HgbS|='Too high please change to proceed.'"
        ]
      },
      "gt0048": {
        "id": "gt0048",
        "priority": 8,
        "when": [
          "$gt0029|Hematocrit of transfused RBCs|<55,%"
        ],
        "then": [
          "$gt0022|Warning Hematocrit of transfused RBCs|='Very low double-check.'"
        ]
      },
      "gt0049": {
        "id": "gt0049",
        "priority": 7,
        "when": [
          "$gt0029|Hematocrit of transfused RBCs|>85,%",
          "$gt0029|Hematocrit of transfused RBCs|<=100,%"
        ],
        "then": [
          "$gt0022|Warning Hematocrit of transfused RBCs|='Very high double-check.'"
        ]
      },
      "gt0050": {
        "id": "gt0050",
        "priority": 6,
        "when": [
          "$gt0029|Hematocrit of transfused RBCs|>100,%"
        ],
        "then": [
          "$gt0022|Warning Hematocrit of transfused RBCs|='Too high please change to proceed.'"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 5,
        "when": [
          "$gt0003|Patient sex|==local::at0005|Male|",
          "$gt0005|Patient height|!=null",
          "$gt0007|Patient weight|!=null",
          "$gt0005|Patient height|.unit=='cm'",
          "$gt0007|Patient weight|.unit=='kg'",
          "!fired($gt0040)"
        ],
        "then": [
          "$gt0031|Total blood volume|.magnitude=0.3669*($gt0005.magnitude/100)^3+0.03219*$gt0007.magnitude+0.6041",
          "$gt0031|Total blood volume|.precision=1",
          "$gt0031|Total blood volume|.unit='l'"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 4,
        "when": [
          "$gt0003|Patient sex|==local::at0006|Female|",
          "$gt0005|Patient height|!=null",
          "$gt0007|Patient weight|!=null",
          "$gt0005|Patient height|.unit=='cm'",
          "$gt0007|Patient weight|.unit=='kg'",
          "!fired($gt0040)"
        ],
        "then": [
          "$gt0031|Total blood volume|.magnitude=0.3561*($gt0005.magnitude/100)^3+0.03308*$gt0007.magnitude+0.1833",
          "$gt0031|Total blood volume|.precision=1",
          "$gt0031|Total blood volume|.unit='l'"
        ]
      },
      "gt0033": {
        "id": "gt0033",
        "priority": 3,
        "when": [
          "$gt0031|Total blood volume|!=null",
          "$gt0026|Patient hematocrit|!=null",
          "!fired($gt0043)"
        ],
        "then": [
          "$gt0034|RBC volume|.magnitude=($gt0031.magnitude*1000)*$gt0026.magnitude/100",
          "$gt0034|RBC volume|.unit='ml'"
        ]
      },
      "gt0035": {
        "id": "gt0035",
        "priority": 2,
        "when": [
          "$gt0034|RBC volume|!=null",
          "$gt0027|Patient's initial HgbS|!=null",
          "$gt0028|Goal HgbS|!=null",
          "$gt0029|Hematocrit of transfused RBCs|!=null",
          "!fired($gt0045)",
          "!fired($gt0046)",
          "!fired($gt0047)",
          "!fired($gt0050)"
        ],
        "then": [
          "$gt0024|RBC replacement volume|.magnitude=($gt0034.magnitude*log($gt0027.magnitude/$gt0028.magnitude)/$gt0029.magnitude)*100",
          "$gt0024|RBC replacement volume|.unit='ml'",
          "$gt0024|RBC replacement volume|.precision=2"
        ]
      },
      "gt0037": {
        "id": "gt0037",
        "priority": 1,
        "when": [
          "$gt0024|RBC replacement volume|!=null"
        ],
        "then": [
          "$gt0036|Approximate number of units, assuming 350 mL RBCs per unit|.magnitude=$gt0024.magnitude/350",
          "$gt0036|Approximate number of units, assuming 350 mL RBCs per unit|.unit='1'"
        ]
      }
    }
  },
