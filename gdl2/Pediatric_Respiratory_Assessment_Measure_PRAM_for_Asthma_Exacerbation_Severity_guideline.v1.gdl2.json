    "rules": {
      "gt0012": {
        "id": "gt0012",
        "priority": 4,
        "when": [
          "$gt0003|O₂ saturation|!=null",
          "$gt0004|Suprasternal retractions present|!=null",
          "$gt0005|Scalene muscle contractions present|!=null",
          "$gt0006|Air entry|!=null",
          "$gt0007|Wheezing|!=null"
        ],
        "then": [
          "$gt0009|Score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value+$gt0007.value"
        ]
      },
      "gt0013": {
        "id": "gt0013",
        "priority": 3,
        "when": [
          "$gt0009|Score|>=0",
          "$gt0009|Score|<=3"
        ],
        "then": [
          "$gt0011|Asthma Severity|=local::at0003|Mild|"
        ]
      },
      "gt0014": {
        "id": "gt0014",
        "priority": 2,
        "when": [
          "$gt0009|Score|>=4",
          "$gt0009|Score|<=7"
        ],
        "then": [
          "$gt0011|Asthma Severity|=local::at0004|Moderate |"
        ]
      },
      "gt0015": {
        "id": "gt0015",
        "priority": 1,
        "when": [
          "$gt0009|Score|>=8",
          "$gt0009|Score|<=12"
        ],
        "then": [
          "$gt0011|Asthma Severity|=local::at0005|Severe|"
        ]
      }
    }
  },
